//
// The EthernetMACLogging modue. 
//
// This module logs the data from the EthernetMAC module. Please always set
// the number of receiving and sending hosts.
//
simple EthernetMACLogging
    parameters:
        debug: bool, // The debbuging flag through you can see detailed output
        sendingHosts: numeric, // Sending host number
        receivingHosts: numeric, // Receiving host number
        fileName: string; // Name of statstics file
endsimple
